<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ez_inventory_system">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EZ_Inventory_System">
        <activity android:name=".shootingGame"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".GameActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".Login"/>
        <activity android:name=".transaction" />
        <activity android:name=".addItem" />
        <activity android:name=".checkStock" />
        <activity android:name=".categories" />
        <activity android:name=".transaction_categories" />
        <activity android:name=".Menu" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
</manifest>