<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/transaction_item"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtStockName"
        android:layout_width="126dp"
        android:layout_height="27dp"
        android:layout_alignBottom="@+id/transaction_item"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="94dp"
        android:layout_marginRight="94dp"
        android:layout_marginBottom="89dp"
        android:layout_toEndOf="@+id/transaction_item"
        android:layout_toRightOf="@+id/transaction_item"
        android:text="Stock name"
        android:textStyle="bold"
        android:textColor="#F8229AC1"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txtBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/transaction_item"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="141dp"
        android:layout_marginRight="141dp"
        android:layout_marginBottom="58dp"
        android:layout_toEndOf="@+id/transaction_item"
        android:layout_toRightOf="@+id/transaction_item"
        android:text="Balance"
        android:textStyle="bold"
        android:textColor="#ce1309"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txtTransactions"
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/transaction_item"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="-76dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="117dp"
        android:layout_marginRight="117dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/transaction_item"
        android:layout_toRightOf="@+id/transaction_item"
        android:text="Transactions"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="17sp" />
</RelativeLayout>